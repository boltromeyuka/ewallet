@model IEnumerable<EWallet.viewModels.CategoryViewModel>

@{
    ViewBag.Title = "Категории";
}

<h2>Категории</h2>

<p>
    @Html.ActionLink("Создать", "Create", new { type = ViewBag.Type })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.ActionLink("Изменить", "Edit", new { id=item.Id }) |            
            @Html.ActionLink("Удалить", "Delete", new { id=item.Id, type = ViewBag.Type })
        </td>
    </tr>
}

</table>
